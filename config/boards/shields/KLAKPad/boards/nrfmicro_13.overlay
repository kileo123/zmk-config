&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWI_SDA, 0, 17)>,
                    <NRF_PSEL(TWI_SCL, 0, 20)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWI_SDA, 0, 17)>,
                    <NRF_PSEL(TWI_SCL, 0, 20)>;
        low-power-enable;
        };
    };
};
