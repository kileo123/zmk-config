        };

        settings_layer {
            bindings = <
                &kp NUMBER_0     &sys_reset       &bootloader      &none
                &bt BT_CLR       &none            &none            &none
                &bt BT_SEL 3     &bt BT_SEL 4     &none            &none
                &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &none
                &none            &to 0            &to 0
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};